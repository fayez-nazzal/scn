{
  "name": "tw-cn",
  "version": "1.0.19",
  "description": "Simple conditional TailwindCSS class utility with built in tailwind merge support, it's tiny, and fast!",
  "main": "lib/tw-cn.js",
  "files": [
    "lib/**/*"
  ],
  "types": "lib/tw-cn.d.ts",
  "scripts": {
    "build": "tsc && google-closure-compiler --js=lib/tw-cn.js --js_output_file=lib/tw-cn.min.js && mv lib/tw-cn.min.js lib/tw-cn.js",
    "test": "jest --config jestconfig.json"
  },
  "keywords": [
    "tailwind merge",
    "conditional class names",
    "classes",
    "classname",
    "className",
    "classnames",
    "simple classes",
    "simple classnames",
    "class",
    "class names",
    "class names",
    "tiny",
    "fast",
    "small",
    "smaller",
    "organize",
    "organize class",
    "organize classnames",
    "clsx",
    "cn",
    "classnames"
  ],
  "author": "Fayez Nazzal",
  "license": "MIT",
  "repository": "https://github.com/fayez-nazzal/tw-cn",
  "bugs": "https://github.com/fayez-nazzal/tw-cn/issues",
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "google-closure-compiler": "^20230802.0.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "scn": "^1.0.19",
    "tailwind-merge": "^1.14.0"
  }
}
